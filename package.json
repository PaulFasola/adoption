{
  "name": "adoption",
  "license": "MIT",
  "version": "0.0.0-development",
  "description": "A dApp, blockchain and crypto agnostic React UI toolkit",
  "author": "Paul Fasola <paul.fasola@protonmail.com>",
  "keywords": [
    "ui-components",
    "dapp",
    "bsc",
    "eth",
    "dApp",
    "components",
    "toolkit"
  ],
  "repository": "https://github.com/PaulFasola/adoption",
  "homepage": "https://github.com/PaulFasola/adoption#readme",
  "bugs": {
    "url": "https://github.com/PaulFasola/adoption/issues"
  },
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "clean": "rimraf dist",
    "build": "npm run clean && rollup -c",
    "dev": "npm run storybook:start",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,js,jsx}\"",
    "format:check": "prettier --list-different \"src/**/*.{ts,tsx,json,js,jsx}\"",
    "lint": "npm run lint:script",
    "lint:script": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "storybook:start": "start-storybook -p 9001 -s ./src/assets -c .storybook",
    "storybook:build": "build-storybook -o doc",
    "test": "cross-env NODE_ICU_DATA=node_modules/full-icu jest --coverage --colors --maxWorkers=1",
    "test:watch": "npm run test --watch",
    "publish": "npx semantic-release --no-ci",
    "semantic-release": "semantic-release"
  },
  "main": "index.js",
  "module": "index.esm.js",
  "types": "index.d.ts",
  "peerDependencies": {
    "react": ">=17.0.1",
    "react-dom": ">=17.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.13.8",
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@rollup/plugin-commonjs": "17.1.0",
    "@rollup/plugin-node-resolve": "11.2.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/npm": "7.0.10",
    "@semantic-release/release-notes-generator": "9.0.1",
    "@storybook/addon-docs": "6.1.21",
    "@storybook/addon-essentials": "6.1.21",
    "@storybook/addon-storysource": "6.1.21",
    "@storybook/react": "6.1.21",
    "@testing-library/react": "11.2.5",
    "@types/dompurify": "2.2.1",
    "@types/enzyme": "3.10.8",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/enzyme-to-json": "1.5.4",
    "@types/jest": "26.0.20",
    "@types/jest-axe": "3.5.1",
    "@types/node": "14.14.32",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.1",
    "@types/styled-components": "5.1.7",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "@wojtekmaj/enzyme-adapter-react-17": "0.4.1",
    "babel-loader": "8.2.2",
    "babel-register": "6.26.0",
    "conventional-changelog-conventionalcommits": "4.5.0",
    "cross-env": "7.0.3",
    "dompurify": "2.2.6",
    "enzyme": "3.11.0",
    "enzyme-to-json": "3.6.1",
    "eslint": "7.21.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "full-icu": "1.3.1",
    "html-webpack-plugin": "5.2.0",
    "husky": "5.1.3",
    "jest": "26.6.3",
    "jest-axe": "4.1.0",
    "jest-date-mock": "1.0.8",
    "jest-styled-components": "7.0.3",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "rimraf": "3.0.2",
    "rollup": "2.40.0",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-postcss": "4.0.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.30.0",
    "semantic-release": "17.4.1",
    "storybook-addon-react-docgen": "1.2.42",
    "storybook-dark-mode": "1.0.4",
    "ts-jest": "26.5.3",
    "ts-loader": "8.0.17",
    "typescript": "4.2.3",
    "webpack": "4.46.0"
  },
  "dependencies": {
    "react-qr-svg": "^2.3.0",
    "styled-components": "^5.2.1"
  },
  "engines": {
    "node": ">=12.0.0",
    "yarn": "^1.5"
  },
  "jest": {
    "setupFiles": [
      "jest-date-mock"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "lcov"
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "preset": "conventionalcommits",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md",
          "changelogTitle": "# Adoption Changelog"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist"
        }
      ],
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ]
    ]
  }
}
